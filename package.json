{
  "name": "readmind",
  "version": "1.0.0",
  "description": "ReadMind - Speed Reading & Text Analysis Application",
  "type": "module",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "deploy": "npm run build && cd backend && npm install --production",
    "deploy:full": "npm install && npm run build && cd backend && npm install --production"
  },
  "keywords": ["speed-reading", "text-analysis", "markdown", "productivity"],
  "author": "ReadMind Team",
  "license": "MIT",
  "devDependencies": {
    "rollup": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  }
}
